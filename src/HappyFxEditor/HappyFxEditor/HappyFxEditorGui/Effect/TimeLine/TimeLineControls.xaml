<UserControl x:Class="HappyFxEditorApp.Effect.TimeLine.TimeLineControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="29" d:DesignWidth="430">
    <Grid Height="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Margin="4,0" Command="{Binding TimeLine.AddTrackCommand}" >Add Track</Button>
        <Button Grid.Column="1" Margin="4,0" Command="{Binding TimeLine.DeleteTrackCommand}" >Delete Track</Button>
        <Button Grid.Column="2" Margin="4,0" Command="{Binding TimeLine.DeleteComponentCommand}" >Delete Component</Button>

        <StackPanel Grid.Column="3" Orientation="Horizontal">
            <TextBlock>Time: </TextBlock>
            <TextBox Width="48" Margin="0,0,4,0" />
            <TextBlock>Duration</TextBlock>
            <TextBox Width="48" Margin="0,0,4,0" />
        </StackPanel>
        
    </Grid>
</UserControl>
