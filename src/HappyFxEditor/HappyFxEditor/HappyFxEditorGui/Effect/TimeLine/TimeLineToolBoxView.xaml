<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:app="clr-namespace:HappyFxEditorApp" 
             xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
             xmlns:Effect="clr-namespace:HappyFxEditorApp.Effect"
             xmlns:TimeLine="clr-namespace:HappyFxEditorApp.Effect.TimeLine"
             x:Class="HappyFxEditorApp.Effect.TimeLine.TimeLineToolBoxView" 
             mc:Ignorable="d" 
             d:DesignHeight="230" d:DesignWidth="191">
    <UserControl.Resources>
        <DataTemplate x:Key="componentTemplate">
            <TimeLine:ComponentView Padding="4"/>
        </DataTemplate>
    </UserControl.Resources>
     <ScrollViewer x:Name="_scrollViewer" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <ListBox HorizontalAlignment="Left"
     		     ItemsSource="{Binding ComponentTools}"
     			 ItemTemplate="{StaticResource componentTemplate}"
                 SelectedItem="{Binding SelectedComponentTool}"
     			 Background="#FF293955">
        </ListBox>
    </ScrollViewer>
 
</UserControl>
