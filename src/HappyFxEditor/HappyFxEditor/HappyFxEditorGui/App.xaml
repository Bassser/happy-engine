<Application x:Class="HappyFxEditorApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="gridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Width" Value="3" />
            <Setter Property="Height" Value="3" />
            <Setter Property="Background" Value="#657795"/>
        </Style>
        <Style x:Key="gridSplitterHStyle" TargetType="GridSplitter" BasedOn="{StaticResource gridSplitterStyle}">
            <Setter Property="Width" Value="auto"/>
        </Style>
        <Style x:Key="gridSplitterVStyle" TargetType="GridSplitter" BasedOn="{StaticResource gridSplitterStyle}">
            <Setter Property="Height" Value="auto"/>
        </Style>
    </Application.Resources>
</Application>
